<?xml version="1.0" encoding="utf-8"?>

<widget xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps"
        id="gov.ny.dps.triviagame"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        defaultlocale="en-US">

  <name>PSC Utility IQ Challenge</name>

  <description>Take our challenge and see how much you know about Utilities.</description>

  <author href="http://www.dps.ny.gov/" email="Jennifer.Santiago@its.ny.gov">DPS Mobile App Team</author>

  <content src="index.html" />

  <access origin="*" />

  <plugin name="cordova-plugin-whitelist" version="1" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <icon src="icons/icon.png" />

  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>

  <platform name="ios">
    <!-- iPhone 6 Plus  -->
    <icon src="icons/icon-60-3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="icons/icon-60.png" width="60" height="60" />
    <icon src="icons/icon-60-2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="icons/icon-76.png" width="76" height="76" />
    <icon src="icons/icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="icons/icon-Small-40.png" width="40" height="40" />
    <icon src="icons/icon-Small-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="icons/icon-57" width="57" height="57" />
    <icon src="icons/icon-57-2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="icons/icon-72.png" width="72" height="72" />
    <icon src="icons/icon-72-2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="icons/icon-Small.png" width="29" height="29" />
    <icon src="icons/icon-Small@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="icons/icon-50.png" width="50" height="50" />
    <icon src="icons/icon-50-2x.png" width="100" height="100" />
  </platform>

</widget>
